
@{
    ViewBag.Title = "ValidateCode";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ValidateCode</h2>

@using (Html.BeginForm("ValidateCode", "Users"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>User</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2" for="code">code</label>
            <div class="col-md-10">
                <input class="form-control text-box single-line" id="code" name="code" type="text" value="">
                <span class="field-validation-valid text-danger" data-valmsg-for="code" data-valmsg-replace="true"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Verify" class="btn btn-default" />
            </div>
        </div>
    </div>
}